{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ES2020",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": ".",
      "lib": ["dom", "dom.iterable", "esnext"],
      "typeRoots": ["*.d.ts", "./node_modules/@types"],
      "types": ["node", "jest", "react", "react-dom"]
    },
    "include": ["src/**/*", "./tsconfig.json", "./@types/jest-dom.d.ts", "setupTests.ts"],
    "exclude": ["node_modules", "dist"]
  }